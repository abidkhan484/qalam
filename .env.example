# LLM Backend Selection - 'ollama' or 'lms' (default: ollama)
LLM_BACKEND="lms"

# Ollama (Local LLM) - for verse analysis and translation evaluation
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2"

# LM Studio (OpenAI-compatible API)
LMS_BASE_URL="http://localhost:1234"
LMS_MODEL="openai/gpt-oss-20b"

# Together.ai - for translation assessment (https://together.ai)
TOGETHER_API_KEY="your-together-api-key-here"
TOGETHER_MODEL="meta-llama/Llama-3.3-70B-Instruct-Turbo"
